<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <localRepository>${user.home}/.m2/${m3RepoName}</localRepository>
  <mirrors>
    <mirror>
      <!-- This sends everything else to /public -->
      <id>nexus</id>
      <mirrorOf>*</mirrorOf>
      <url>https://ncimvn.nci.nih.gov/nexus/content/groups/public</url>
    </mirror>
  </mirrors>
  <profiles>
    <profile>
      <id>nexus</id>
      <!-- Enable snapshots for the built in central repo to direct -->
      <!-- all requests to nexus via the mirror -->
      <repositories>
        <repository>
          <id>central</id>
          <url>http://central</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </repository>
      </repositories>
     <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url>http://central</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
    <profile>
        <id>sra-qa</id>
        <activation>
            <activeByDefault>false</activeByDefault>
            <property>
                <name>env</name>
                <value>qa</value>
            </property>
        </activation>
        <properties>
            <!-- Application Server :: Properties used for only during "mvn clean install or dependency:copy-dependencies" -->
	    <!-- QA tiers do not drop the database or run Integration Tests -->
            <jboss.hostname>localhost</jboss.hostname>
            <jboss.port>29080</jboss.port>
            <jboss.home>${PWD}/JBOSS</jboss.home>	<!-- PWD = AnthillPro3 build directory -->
            <jboss.server.name>localhost</jboss.server.name>

	    <!-- lets tell mvn to copy dependencies to the target folder -->
            <appserver.lib.dir>${PWD}/tcgadcclib</appserver.lib.dir>	<!-- PWD = AnthillPro3 build directory -->
            <appserver.deploy.dir></appserver.deploy.dir>

	    <database.driver.class>oracle.jdbc.driver.OracleDriver</database.driver.class>
	    <database.connection.url>${database.connection.url}</database.connection.url>
            <!-- Database :: Quartz Schema Properties -->
            <database.quartz.schema.defaultSchemaName>${database.quartz.schema.defaultSchemaName}</database.quartz.schema.defaultSchemaName>
            <database.quartz.schema.username>${database.quartz.schema.username}</database.quartz.schema.username>
            <database.quartz.schema.password>${database.quartz.schema.password}</database.quartz.schema.password>
    
            <!-- Database :: Common Schema Properties -->
            <database.common.schema.defaultSchemaName>${database.common.schema.defaultSchemaName}</database.common.schema.defaultSchemaName>
            <database.common.schema.username>${database.common.schema.username}</database.common.schema.username>
            <database.common.schema.password>${database.common.schema.password}</database.common.schema.password>

            <!--  <props.loc> [ Local Directory to host Config files ]</props.loc> -->
            <local.email>rashmi.sanbhadti@nih.gov</local.email>
            <tcga.files.basedir>${PWD}/tcgadcc2</tcga.files.basedir> 
            <solr.home.dir>${PWD}/tcgadcc2/solr</solr.home.dir>
	    <!-- <solr.sync.interval>[ Interval in minutes to trigger solr data refresh ]</solr.sync.interval> -->
        </properties>
        <repositories>
            <repository>
                <id>central</id>
                <url>http://central</url>
                <releases>
                    <enabled>true</enabled>
                </releases>
	    <!-- for dev updatePolicy should be always and true -->
                <snapshots>
                    <updatePolicy>never</updatePolicy>
                    <enabled>false</enabled>
                </snapshots>
            </repository>
        </repositories>
    </profile>
  </profiles>
  <activeProfiles>
    <!-- make the profile active all the time -->
    <activeProfile>nexus</activeProfile>
  </activeProfiles>
  
  <pluginGroups>
    <!-- define the sonatype plugin group, so the nexus plugins will work without typing the groupId -->
  	<pluginGroup>org.sonatype.plugins</pluginGroup>
  </pluginGroups>

